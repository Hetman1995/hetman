        <Button x:Name="btnZatwierdzZmiane" Content="Zaktualizuj Dane" HorizontalAlignment="Left" Height="23" Margin="641,352,0,0" VerticalAlignment="Top" Width="135" FontSize="14" FontFamily="Arial" Click="btnZatwierdzZmiane_Click"/>
        <Label Content="Imie" HorizontalAlignment="Left" Margin="441,243,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.439,-2.584" FontFamily="Arial" FontSize="20" Width="47"/>
